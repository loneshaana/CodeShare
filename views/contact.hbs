  <h1 class="text-center">Contact-us</h1>
  <form class="col-md-6 col-md-offset-3" method="post" action="/contact">

    {{#each errorMessages}}
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span>
      {{this.msg}}
    </div>
    {{/each}}

    <div class="form-group">
      <label>Your Name</label>
      <input name="name" type="text" class="form-control" placeholder="Your Name" value={{name}}>
    </div>
    <div class="form-group">
      <label>Email address</label>
      <input name="email" type="email" class="form-control" placeholder="Your Email" value={{email}}>
    </div>
    <div class="form-group">
      <label>Message</label>
      <textarea name="message" class="form-control" rows="3">{{message}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
